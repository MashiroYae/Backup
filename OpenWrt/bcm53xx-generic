#!/usr/bin/env bash

cd /srv/http/OpenWrt/ImageBuilder || exit
rm -rf openwrt-imagebuilder-bcm53xx-generic.Linux-x86_64
curl -JLO https://downloads.openwrt.org/snapshots/targets/bcm53xx/generic/openwrt-imagebuilder-bcm53xx-generic.Linux-x86_64.tar.xz
tar xf openwrt-imagebuilder-bcm53xx-generic.Linux-x86_64.tar.xz
rm openwrt-imagebuilder-bcm53xx-generic.Linux-x86_64.tar.xz
cd openwrt-imagebuilder-bcm53xx-generic.Linux-x86_64 || exit

make image PROFILE=asus_rt-ac88u PACKAGES="blockd btrfs-progs cfdisk dnsmasq-full dosfstools fdisk ip-full iw-full kmod-fs-msdos kmod-usb-net-cdc-subset kmod-usb-storage-extras kmod-usb-storage-uas luci luci-ssl-openssl nano-full openssh-sftp-server wpad-openssl -dnsmasq -libustream-mbedtls -odhcp6c -odhcpd-ipv6only -ppp -ppp-mod-pppoe -wpad-basic-mbedtls"
