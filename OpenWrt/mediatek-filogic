#!/usr/bin/env bash

Target=mediatek
Arch=filogic

cd /srv/http/OpenWrt/ImageBuilder || exit
rm -rf openwrt-imagebuilder-$Target-$Arch.Linux-x86_64
curl -JLO https://downloads.openwrt.org/snapshots/targets/$Target/$Arch/openwrt-imagebuilder-$Target-$Arch.Linux-x86_64.tar.zst
tar --use-compress-program=unzstd -xf openwrt-imagebuilder-$Target-$Arch.Linux-x86_64.tar.zst
rm openwrt-imagebuilder-$Target-$Arch.Linux-x86_64.tar.zst
cd openwrt-imagebuilder-$Target-$Arch.Linux-x86_64 || exit

ln -s ../bin .

make -j$(nproc) image PROFILE=bananapi_bpi-r3 PACKAGES="auc avahi-daemon-service-http avahi-daemon-service-ssh avahi-dbus-daemon blockd bsdtar btrfs-progs cfdisk coreutils-cat coreutils-dd coreutils-ls curl dnsmasq-full dosfstools ethtool-full fdisk htop ip-full iw-full kmod-fs-msdos kmod-fs-nfs-v4 kmod-nvme kmod-usb-net-cdc-subset kmod-usb-storage-extras kmod-usb-storage-uas lm-sensors lsblk lsd luci luci-app-irqbalance luci-ssl-openssl nano-full nfs-kernel-server-utils nfs-utils nvme-cli openssh-sftp-avahi-service pciutils rsync usbutils wget-ssl wpad-openssl zstd -dnsmasq -libustream-mbedtls -odhcp6c -odhcpd-ipv6only -ppp-mod-pppoe -wpad-basic-mbedtls" ROOTFS_PARTSIZE="2048"
make -j$(nproc) image PROFILE=bananapi_bpi-r3-mini PACKAGES="auc avahi-daemon-service-http avahi-daemon-service-ssh avahi-dbus-daemon blockd bsdtar btrfs-progs cfdisk coreutils-cat coreutils-dd coreutils-ls curl dnsmasq-full dosfstools fdisk htop ip-full iw-full kmod-fs-msdos kmod-fs-nfs-v4 kmod-mtd-rw kmod-nvme kmod-usb-net-cdc-subset kmod-usb-storage-extras kmod-usb-storage-uas lm-sensors lsblk lsd luci luci-app-irqbalance luci-ssl-openssl nano-full nfs-kernel-server-utils nfs-utils nvme-cli openssh-sftp-avahi-service pciutils rsync usbutils wget-ssl wpad-openssl zstd -dnsmasq -libustream-mbedtls -odhcp6c -odhcpd-ipv6only -ppp-mod-pppoe -wpad-basic-mbedtls" ROOTFS_PARTSIZE="2048"
make -j$(nproc) image PROFILE=bananapi_bpi-r4 PACKAGES="auc avahi-daemon-service-http avahi-daemon-service-ssh avahi-dbus-daemon blockd bsdtar btrfs-progs cfdisk coreutils-cat coreutils-date coreutils-dd coreutils-ls curl dnsmasq-full dosfstools ethtool-full fdisk htop hwclock ip-full iw-full kmod-fs-msdos kmod-fs-nfs-v4 kmod-nvme kmod-usb-net-cdc-subset kmod-usb-storage-extras kmod-usb-storage-uas lm-sensors lsblk lsd luci luci-app-irqbalance luci-proto-modemmanager luci-proto-qmi luci-ssl-openssl nano-full nfs-kernel-server-utils nfs-utils nvme-cli openssh-sftp-avahi-service pciutils rsync usbutils wget-ssl wpad-openssl zstd -dnsmasq -libustream-mbedtls -odhcp6c -odhcpd-ipv6only -ppp-mod-pppoe -wpad-basic-mbedtls" ROOTFS_PARTSIZE="2048"
make -j$(nproc) image PROFILE=glinet_gl-mt6000 PACKAGES="auc avahi-daemon-service-http avahi-daemon-service-ssh avahi-dbus-daemon blockd bsdtar btrfs-progs cfdisk coreutils-cat coreutils-dd coreutils-ls curl dnsmasq-full dosfstools fdisk htop ip-full iw-full kmod-fs-msdos kmod-fs-nfs-v4 kmod-usb-net-cdc-subset kmod-usb-storage-extras kmod-usb-storage-uas lm-sensors lsblk lsd luci luci-app-irqbalance luci-ssl-openssl nano-full nfs-kernel-server-utils nfs-utils openssh-sftp-avahi-service rsync usbutils wget-ssl wpad-openssl zstd -dnsmasq -libustream-mbedtls -odhcp6c -odhcpd-ipv6only -ppp-mod-pppoe -wpad-basic-mbedtls"
make -j$(nproc) image PROFILE=openwrt_one PACKAGES="auc avahi-daemon-service-http avahi-daemon-service-ssh avahi-dbus-daemon blockd bsdtar btrfs-progs cfdisk coreutils-cat coreutils-dd coreutils-ls curl dnsmasq-full dosfstools ethtool-full fdisk htop ip-full iw-full kmod-fs-msdos kmod-fs-nfs-v4 kmod-nvme kmod-usb-net-cdc-subset kmod-usb-storage-extras kmod-usb-storage-uas lm-sensors lsblk lsd luci luci-app-irqbalance luci-ssl-openssl nano-full nfs-kernel-server-utils nfs-utils nvme-cli openssh-sftp-avahi-service pciutils rsync usbutils wget-ssl wpad-openssl zstd -dnsmasq -libustream-mbedtls -odhcp6c -odhcpd-ipv6only -ppp-mod-pppoe -wpad-basic-mbedtls"
make -j$(nproc) image PROFILE=xiaomi_mi-router-ax3000t-ubootmod PACKAGES="auc avahi-daemon-service-http avahi-daemon-service-ssh avahi-dbus-daemon blockd coreutils-cat coreutils-ls curl dnsmasq-full htop ip-full iw-full kmod-fs-nfs-v4 kmod-mtd-rw lm-sensors lsd luci luci-app-irqbalance luci-ssl-openssl nano-full openssh-sftp-avahi-service wget-ssl wpad-openssl -dnsmasq -libustream-mbedtls -odhcp6c -odhcpd-ipv6only -ppp -ppp-mod-pppoe -wpad-basic-mbedtls"
make -j$(nproc) image PROFILE=xiaomi_redmi-router-ax6000-ubootmod PACKAGES="auc avahi-daemon-service-http avahi-daemon-service-ssh avahi-dbus-daemon blockd coreutils-cat coreutils-ls curl dnsmasq-full htop ip-full iw-full kmod-fs-nfs-v4 kmod-mtd-rw lm-sensors lsd luci luci-app-irqbalance luci-ssl-openssl nano-full openssh-sftp-avahi-service wget-ssl wpad-openssl -dnsmasq -libustream-mbedtls -odhcpd-ipv6only -ppp -ppp-mod-pppoe -wpad-basic-mbedtls"
