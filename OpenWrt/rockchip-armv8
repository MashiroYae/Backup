#!/usr/bin/env bash

Target=rockchip
Arch=armv8

cd /srv/http/OpenWrt/ImageBuilder || exit
rm -rf openwrt-imagebuilder-$Target-$Arch.Linux-x86_64
curl -JLO https://downloads.openwrt.org/snapshots/targets/$Target/$Arch/openwrt-imagebuilder-$Target-$Arch.Linux-x86_64.tar.zst
tar --use-compress-program=unzstd -xf openwrt-imagebuilder-$Target-$Arch.Linux-x86_64.tar.zst
rm openwrt-imagebuilder-$Target-$Arch.Linux-x86_64.tar.zst
cd openwrt-imagebuilder-$Target-$Arch.Linux-x86_64 || exit

ln -s ../bin .

make -j$(nproc) image PROFILE=friendlyarm_nanopi-r4s PACKAGES="auc avahi-daemon-service-http avahi-daemon-service-ssh avahi-dbus-daemon blockd btrfs-progs cfdisk coreutils-cat coreutils-dd coreutils-ls curl dmesg dnsmasq-full dosfstools fdisk htop ip-full iw-full kmod-fs-msdos kmod-nft-tproxy kmod-usb-net-cdc-subset kmod-usb-storage-extras kmod-usb-storage-uas lm-sensors lsd luci luci-app-irqbalance luci-ssl-openssl nano-full openssh-sftp-avahi-service rsync sing-box usbutils wget-ssl wpad-openssl -dnsmasq -libustream-mbedtls -odhcp6c -odhcpd-ipv6only -ppp-mod-pppoe" ROOTFS_PARTSIZE="2048"
make -j$(nproc) image PROFILE=friendlyarm_nanopi-r5c PACKAGES="auc avahi-daemon-service-http avahi-daemon-service-ssh avahi-dbus-daemon blockd btrfs-progs cfdisk coreutils-cat coreutils-date coreutils-dd coreutils-ls curl dmesg dnsmasq-full dosfstools fdisk htop hwclock ip-full iw-full kmod-fs-msdos kmod-nft-tproxy kmod-mac80211 kmod-mt7921e kmod-mt7922-firmware kmod-nft-tproxy kmod-nvme kmod-usb-net-cdc-subset kmod-usb-storage-extras kmod-usb-storage-uas lm-sensors lsd luci luci-app-irqbalance luci-ssl-openssl nano-full nvme-cli openssh-sftp-avahi-service rsync sing-box pciutils usbutils wget-ssl wpad-openssl -dnsmasq -kmod-rtw88-8822ce -libustream-mbedtls -odhcp6c -odhcpd-ipv6only -ppp -ppp-mod-pppoe -rtl8822ce-firmware -wpad-basic-mbedtls" ROOTFS_PARTSIZE="2048"
make -j$(nproc) image PROFILE=friendlyarm_nanopi-r5s PACKAGES="auc avahi-daemon-service-http avahi-daemon-service-ssh avahi-dbus-daemon blockd btrfs-progs cfdisk coreutils-cat coreutils-date coreutils-dd coreutils-ls curl dmesg dnsmasq-full dosfstools fdisk htop hwclock ip-full iw-full kmod-fs-msdos kmod-mac80211 kmod-mt7921e kmod-nft-tproxy kmod-nvme kmod-usb-net-cdc-subset kmod-usb-storage-extras kmod-usb-storage-uas lm-sensors lsd luci luci-app-irqbalance luci-ssl-openssl nano-full nvme-cli openssh-sftp-avahi-service rsync sing-box pciutils usbutils wget-ssl wpad-openssl -dnsmasq -libustream-mbedtls -odhcp6c -odhcpd-ipv6only -ppp-mod-pppoe" ROOTFS_PARTSIZE="2048"
make -j$(nproc) image PROFILE=friendlyarm_nanopi-r6s PACKAGES="auc avahi-daemon-service-http avahi-daemon-service-ssh avahi-dbus-daemon blockd btrfs-progs cfdisk coreutils-cat coreutils-dd coreutils-ls curl dmesg dnsmasq-full dosfstools fdisk htop ip-full iw-full kmod-fs-msdos kmod-nft-tproxy kmod-usb-net-cdc-subset kmod-usb-storage-extras kmod-usb-storage-uas lm-sensors lsd luci luci-app-irqbalance luci-ssl-openssl nano-full openssh-sftp-avahi-service rsync sing-box usbutils wget-ssl wpad-openssl -dnsmasq -libustream-mbedtls -odhcp6c -odhcpd-ipv6only -ppp-mod-pppoe" ROOTFS_PARTSIZE="2048"
