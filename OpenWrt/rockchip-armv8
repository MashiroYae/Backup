#!/usr/bin/env bash

Target=rockchip
Arch=armv8

cd /srv/http/OpenWrt/ImageBuilder || exit
rm -rf openwrt-imagebuilder-$Target-$Arch.Linux-x86_64
curl -JLO https://downloads.openwrt.org/snapshots/targets/$Target/$Arch/openwrt-imagebuilder-$Target-$Arch.Linux-x86_64.tar.zst
tar --use-compress-program=unzstd -xf openwrt-imagebuilder-$Target-$Arch.Linux-x86_64.tar.zst
rm openwrt-imagebuilder-$Target-$Arch.Linux-x86_64.tar.zst
cd openwrt-imagebuilder-$Target-$Arch.Linux-x86_64 || exit

ln -s ../bin .

make -j$(nproc) image PROFILE=friendlyarm_nanopi-r4s PACKAGES="apk-openssl avahi-daemon-service-http avahi-daemon-service-ssh avahi-dbus-daemon blockd dmesg dnsmasq-full htop ip-full iw-full luci-app-irqbalance luci-app-package-manager luci-ssl-openssl nano-full openssh-sftp-avahi-service owut wget-ssl -apk-mbedtls -dnsmasq -e2fsprogs -libustream-mbedtls -odhcp6c -odhcpd-ipv6only -ppp -ppp-mod-pppoe -uclient-fetch" ROOTFS_PARTSIZE="4096"
make -j$(nproc) image PROFILE=friendlyarm_nanopi-r5c PACKAGES="apk-openssl avahi-daemon-service-http avahi-daemon-service-ssh avahi-dbus-daemon blockd dmesg dnsmasq-full htop hwclock ip-full iw-full  luci-app-irqbalance luci-app-package-manager luci-ssl-openssl nano-full openssh-sftp-avahi-service owut wget-ssl -apk-mbedtls -dnsmasq -kmod-rtw88-8822ce -e2fsprogs -libustream-mbedtls -odhcp6c -odhcpd-ipv6only -ppp -ppp-mod-pppoe -rtl8822ce-firmware -wpad-basic-mbedtls" ROOTFS_PARTSIZE="4096"
make -j$(nproc) image PROFILE=friendlyarm_nanopi-r5s PACKAGES="apk-openssl avahi-daemon-service-http avahi-daemon-service-ssh avahi-dbus-daemon blockd dmesg dnsmasq-full htop hwclock ip-full iw-full luci-app-irqbalance luci-app-package-manager luci-ssl-openssl nano-full openssh-sftp-avahi-service owut wget-ssl -apk-mbedtls -dnsmasq -e2fsprogs -libustream-mbedtls -odhcp6c -odhcpd-ipv6only -ppp -ppp-mod-pppoe -uclient-fetch" ROOTFS_PARTSIZE="4096"
make -j$(nproc) image PROFILE=friendlyarm_nanopi-r6s PACKAGES="apk-openssl avahi-daemon-service-http avahi-daemon-service-ssh avahi-dbus-daemon blockd dmesg dnsmasq-full htop ip-full iw-full luci-app-irqbalance luci-app-package-manager luci-ssl-openssl nano-full openssh-sftp-avahi-service owut wget-ssl -apk-mbedtls -dnsmasq -e2fsprogs -libustream-mbedtls -odhcp6c -odhcpd-ipv6only -ppp -ppp-mod-pppoe -uclient-fetch" ROOTFS_PARTSIZE="4096"
