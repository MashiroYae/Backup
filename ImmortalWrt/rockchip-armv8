#!/usr/bin/env bash

Target=rockchip
Arch=armv8

cd /srv/http/ImmortalWrt/ImageBuilder || exit
rm -rf immortalwrt-imagebuilder-$Target-$Arch.Linux-x86_64
curl -JLO https://downloads.immortalwrt.org/snapshots/targets/$Target/$Arch/immortalwrt-imagebuilder-$Target-$Arch.Linux-x86_64.tar.xz
tar xf immortalwrt-imagebuilder-$Target-$Arch.Linux-x86_64.tar.xz
rm immortalwrt-imagebuilder-$Target-$Arch.Linux-x86_64.tar.xz
cd immortalwrt-imagebuilder-$Target-$Arch.Linux-x86_64 || exit

make -j$(nproc) image PROFILE=friendlyarm_nanopi-r6s PACKAGES="auc blockd btrfs-progs cfdisk curl dosfstools ip-full kmod-fs-msdos kmod-usb-net-cdc-subset kmod-usb-storage-extras kmod-usb-storage-uas luci luci-app-attendedsysupgrade luci-app-homeproxy luci-app-irqbalance luci-app-usteer luci-compat luci-proto-wireguard luci-ssl-openssl nano-full openssh-sftp-server qrencode usbutils wget-ssl -automount -ipv6helper -libustream-openssl -ppp -ppp-mod-pppoe"
